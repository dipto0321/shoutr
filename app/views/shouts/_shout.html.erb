<% unless shout.content.nil? %>
<div class="card my-3">
  <div class="card-body">
    <div class="card-title">
      <h5>
      <%= avatar(shout.user) %>
      <%= link_to shout.username, shout.user %>
      </h5>
      <%=link_to shout do %>
        <%= time_ago_in_words(shout.created_at) %> ago
      <% end %>
    </div>
    <%= render shout.content %>
  </div>
</div>
<% end %>