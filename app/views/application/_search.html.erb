<%= simple_form_for :search, url: search_path, method: :get do |form| %>
  <div class="form-row my-3">
    <div class="col-md-10">
      <%= form.input :term, label: false, input_html: {placeholder: "Search here!"} %>
    </div>
    <div class="col-md-2">
      <%= form.button :submit, "Search", class: "btn-block btn-primary" %>
    </div>
  </div>
<% end %>